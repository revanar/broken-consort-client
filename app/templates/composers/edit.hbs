<h2>Edit Composers</h2>

<div class="edit-table-box table-responsive">
    <div class="edit-table header">
        <div class="input-med">Name</div>
        <div class="input-long">Songs {{link-to "(edit)" 'songs.edit'}}</div>
    </div>
  {{#each composers as |composer|}}
      <div class="edit-table item input-group-sm" {{action "autoSave" "composer" on="change"}}>
          <label for="composer-name-{{composer.id}}" class="sr-only">Name</label>
        {{input
          id=(concat "composer-name-" composer.id)
          class="input-med form-control"
          value=composer.name
          placeholder="unnamed composer"
        }}
          <label for="composer-songs-{{composer.id}}" class="sr-only">Songs</label>
        <div class="input-long">{{csv-list composer "songs"}}</div>
        {{hold-button
          delay=deleteDelay
          class="delete-composer"
          action=(action "deleteRecord" composer)
        }}
      </div>
  {{/each}}
</div>

<div class="edit-table-box table-responsive">
    <div class="edit-table header">
        <div class="input-med">Name</div>
    </div>
    <form id="newRecord" class="edit-table input-group-sm" method="post">
        <label for="new-composer-name" class="sr-only">Name</label>
        {{input
          id="new-composer-name"
          class="input-med form-control"
          value=newRecord.name
          placeholder="unnamed composer"
        }}
        <button class="btn btn-default btn-sm input-button" {{action 'createRecord' 'composer' newRecord}}>
            Add New Composer
        </button>
    </form>
</div>
